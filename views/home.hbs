	<body>
		<header>
			<h1><a href="/">Parcelino<span id="dot">.</span></a></h1>
			<ol>
			
				{{#if authorised}}
					{{#if role.customer}}
						<li><a href="/send">Send</a></li>
						<l1><a href="/home-customer">Parcels</a></li>
					{{/if}}
					{{#if role.courier}}
						<li><a href="/home-courier-p">Parcels</a></li>
						<li><a href="/home-courier-transit">Transit</a></li>
					{{/if}}
					{{#if role.admin}}
						<li><a href="/home-admin-c">Couriers</a></li>
						<li><a href="/home-admin-p">Parcels</a></li>	
					{{/if}}
						<li><a href="/logout">Log out</a></li>
				{{else}}
					<li><a href="/login">Log in</a></li>
					<li><a href="/register">Register</a></li>
				{{/if}}
				
			</ol>
		</header>
		<main>
			<section class="explicative">	
				<section class="explicative-text">
					{{#if authorised}}
						<p>Hello {{authorised}}</p>
					{{else}}
						<p>Hi there!</p>
					{{/if}}
					<p>Parcel sending reimagined...</p>
					<p>Easy, safe, reliable!</p>
					<button class="btn explore">Explore</button>
				</section>

				<section class="explicative-image">
					<img src="img/uk-map.png">
				</section>
			</section>

		</main>

		<footer>
			<p>This is the footer</p>
		</footer>
		
	</body>	

