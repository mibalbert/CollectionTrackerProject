
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<meta name="viewport" content= "width=device-width, initial-scale=1.0">
		<link href="/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>
			<h1>Home</h1>
				<a href="/logout">Log out</a>
		</header>
	<main>
		<p>This is the home page.</p>
		{{#if authorised}}
			<p><a href="/send">Send ðŸ“¦</a></p>
		{{/if}}

		<table>
			<thead>
				<tr>
					<th>Sender PostCode</th>
					<th>Recipient PostCode</th>
					<th>Weight</th>
					<th>Recipient Name</th>
					<th>Full Adress</th>
					<th>Sender Username</th>
					<th>Date and Time</th>
					<th>Unique ID</th>
					<th>Status</th>
				</tr>
			</thead>
			<tbody>
			{{#each parcels}}
				<tr>
					<td>{{this.sender_postcode}}</td>
					<td>{{this.recipient_postcode}}</td>
					<td>{{this.weight_kg}}</td>
					<td>{{this.recipient_name}}</td>
					<td>{{this.full_address}}</td>
					<td>{{this.sender_username}}</td>
					<td>{{this.date_time}}</td>
					<td>{{this.uuid}}</td>
					<td>{{this.status}}</td>
				</tr>		
			{{/each}}
			</tbody>
		</table>



	</main>
	
	<footer>
		<hr />
		<p>This is the footer</p>
	</footer>
	</body>
	
</html>
