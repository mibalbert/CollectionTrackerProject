
<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Home Page</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Alberto Paros">
		<meta name="viewport" content= "width=device-width, initial-scale=1.0">
		<link href="/style.css" type="text/css" rel="stylesheet" />
		<script type="module" src="util.js" defer></script>
	</head>
	<body>
		<header>
			<h1><a href="/">Parcelino<span id="dot">.</span></a></h1>
			<ol>
                <li><a href="/send">Send</a></li>
                <li><a href="/">Home</a></p>
                <li><a href="/logout">Log out</a></li>
			</ol>
		</header>
	<main>
		<p class="table-description">This is the customer's home page and it displays the sended parcels.</p>
		<section class="table-section">
		<table>
			<thead>
				<tr>
					<th></th>
					{{!-- <th>Sender PostCode</th> --}}
					<th>Recipient PostCode</th>
					{{!-- <th>Weight</th> --}}
					{{!-- <th>Recipient Name</th> --}}
					<th>Recipient Adress</th>
					<th>Date Posted</th>
					{{!-- <th>Date Transit</th> --}}
					{{!-- <th>Date Delivered</th> --}}
					{{!-- <th>Unique ID</th> --}}
					<th>Status</th>
				</tr>
			</thead>
			<tbody>
			{{#each parcels}}
				<div class="parcelo">
				<tr id="link" class="parcel-link" onclick="window.location='/parcel/{{this.uuid}}'">
					<td><img class="parcel-icon" src="img/package.png"></td>
					{{!-- <td id="sender_postcode">{{this.sender_postcode}}</td> --}}
					<td id="recipient_postcode">{{this.recipient_postcode}}</td>
					{{!-- <td id="weight_kg">{{this.weight_kg}}</td> --}}
					{{!-- <td id="recipient_name">{{this.recipient_name}}</td> --}}
					<td id="full_address">{{this.recipient_address}}, {{this.recipient_city}}</td>
					<td class="date_time_created">{{this.date_time_created}}</td>
					{{!-- <td class="date_time_in_transit">{{this.date_time_in_transit}}</td> --}}
					{{!-- <td class="date_time_delivered">{{this.date_time_delivered}}</td> --}}
					{{!-- <td id="uuid">{{this.uuid}}</td> --}}
					<td id="status">{{this.status}}</td>
				</div>
				</tr>
			{{/each}}
			</tbody>
		</table>
		</section>
	</main>	
	<footer>
		<p>This is the footer</p>
	</footer>
	</body>
	
</html>
